<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>list</title>
    <link rel="stylesheet" href="/admin/css/app.min.css">
    <link rel="stylesheet" href="/admin/css/rewrite.css">
    <link rel="stylesheet" href="/admin/css/comment.css">

    <script type="text/javascript" charset="utf-8" src="/ueditor/ueditor.config.js"></script>
    <script type="text/javascript" charset="utf-8" src="/ueditor/ueditor.all.min.js"> </script>
    <script type="text/javascript" charset="utf-8" src="/ueditor/lang/zh-cn/zh-cn.js"> </script>

</head>

<body>
    <div class="panel panel-default">
        <div class="panel-heading font-bold">
            添加详细
        </div>
        <div class="panel-body">
            <form class="form-horizontal" method="post" action="/admin/detailAdd" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="col-sm-2 control-label">标题</label>
                    <div class="col-sm-8">
                        <input type="text" name="title" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">平台</label>
                    <div class="col-sm-8">
                        <!--<input type="text" name="platform" class="form-control">-->
                        <select ui-jq="chosen" class="w-md" name="platform">
                        <option value="PC端">PC端</option>
                        <option value="移动端">移动端</option>
                    </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">图片</label>
                    <div class="col-sm-8">
                        <input id="file" ui-jq="filestyle" name="Img" type="file" data-icon="false" data-classButton="btn btn-default" data-classInput="form-control inline v-middle input-s"
                            multiple='mutiple' />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">图片</label>
                    <div class="col-sm-8">
                        <script id="editor" type="text/plain" style="width:100%;height:500px;"></script>
                        <script>
                            var ue = UE.getEditor('editor');
                        </script>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4 text-center">
                        <!--<button type="submit" class="btn btn-default">取消</button>-->
                        <button type="submit" class="btn btn-lg btn-primary btn-submit-width">保存</button>
                    </div>
                </div>
            </form>
        </div>
    </div>


    <script src="/admin/js/app.min.js" charset="utf-8"></script>
    <script src="/admin/js/ui-jp.js"></script>
    <script>
</script>
</body>

</html>