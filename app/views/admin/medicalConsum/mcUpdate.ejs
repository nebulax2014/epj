            <div class="form-group">
                <label class="col-sm-2 control-label">mc_preps</label>
                <div class="col-sm-8">
                    <input type="text" name="mc_preps" class="form-control" value="<%= result.mc_preps %>">
                </div>
            </div>

            
            <div class="line line-dashed b-b line-lg pull-in line-margin"></div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4 text-center">
                    <button type="button" class="btn btn-default">取消</button>
                    <button type="submit" class="btn btn-lg btn-primary btn-submit-width">保存</button>
                </div>
            </div>
        </form>
    </div>
</div>


<script src="/admin/js/app.min.js" charset="utf-8"></script>
<script src="/admin/js/ui-jp.js"></script>

</body>
</html>